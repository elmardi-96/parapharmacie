{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
   {{parent()}}
    <link rel="stylesheet" href="{{  asset('css/login.css') }}" rel="stylesheet">
    <style id="savepage-cssvariables">
        {# body {
            background-image: url({{ asset('images/logofcz.png') }} ) !important; 
        } #}
    </style>
{% endblock %}

{% block body %}

<div class="page-login flex-container">
     
    <div class="form-login">

        <div class="test mb-4">
             <img class="fcz-img" src="{{ asset('images/logofcz.png') }}"></img>
        </div>
        <form method="post" class="p-4 shadow" autocomplete="off">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h4 class="authentification mb-3 font-weight-bold text-center mb-2">AUTHENTIFICATION</h4>
            
            

            <div class="form-group">
                {# <label for="inputUsername" class="mt-2">Nom d'utilisateur</label> #}
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                      class="form-control  mb-2" required   placeholder="Nom d'utilisateur" >
            </div>

            <div class="form-group">
                {# <label for="inputPassword" class="mt-2">Mot de passe</label> #}
                <input type="password" name="password" id="inputPassword" 
                        class="form-control mb-2" required placeholder="Mot de passe" autocomplete="off"> 
            </div>

            

            <input type="hidden" name="_csrf_token" 
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-dark mt-2 btn-block font-weight-bold"  type="submit">
            Connexion
            </button>
        </form>
    </div>
    

</div>
{% endblock %}
